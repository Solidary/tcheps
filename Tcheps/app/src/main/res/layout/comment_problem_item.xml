<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/comment_problem_item_author_avatar"
            android:layout_width="60dp" android:layout_height="60dp"
            android:padding="5dp"
            android:clickable="true" android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"/>
        <LinearLayout
            android:id="@+id/comment_problem_item_author_ll"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_toRightOf="@id/comment_problem_item_author_avatar">
            <TextView
                android:id="@+id/comment_problem_item_author_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textStyle="bold" android:textSize="20sp"
                android:text="Name"/>
            <TextView
                android:id="@+id/comment_problem_item_author_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textStyle="italic" android:textSize="15sp"
                android:text="Tle D"/>
        </LinearLayout>
        <TextView
            android:id="@+id/comment_item_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="11h" android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/comment_problem_item_description"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="17sp" android:padding="5dp"
            android:layout_marginLeft="30dp"
            android:maxLines="3" android:ellipsize="end"
            android:layout_below="@id/comment_problem_item_author_ll"/>

    </RelativeLayout>
</LinearLayout>