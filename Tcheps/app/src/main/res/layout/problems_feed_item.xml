<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="25dp" android:paddingLeft="25dp"
        android:paddingTop="25dp" android:paddingBottom="25dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/problems_feed_author_avatar"
                android:layout_width="60dp" android:layout_height="60dp"
                android:padding="5dp"
                android:clickable="true" android:background="@android:color/transparent"
                android:layout_alignParentLeft="true"/>
            <LinearLayout
                android:id="@+id/problems_feed_author_ll"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_toRightOf="@id/problems_feed_author_avatar">
                <TextView
                    android:id="@+id/problems_feed_author_display_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:textStyle="bold" android:textSize="20sp"/>
                <TextView
                    android:id="@+id/problems_feed_author_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic" android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/problems_feed_stats_ll"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_vertical"
                android:paddingTop="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
                    <ImageView
                        android:id="@+id/problems_feed_stats_likers_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favorite_black_18dp"/>
                    <TextView
                        android:id="@+id/problems_feed_stats_likers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="174" android:singleLine="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_question_answer_black_18dp"/>
                    <TextView
                        android:id="@+id/problems_feed_stats_answers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:singleLine="true"
                        android:text="1259"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favorite_black_18dp"/>
                    <TextView
                        android:id="@+id/problems_feed_stats_sharings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17" android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/problems_feed_stats_ll"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_rate_black_18dp"/>
                <TextView
                    android:id="@+id/problems_feed_created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11h"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/problems_feed_description"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="17sp"
            android:padding="5dp"
            android:layout_marginLeft="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginLeft="30dp" android:layout_marginRight="5dp">
            <ImageButton
                android:id="@+id/problems_feed_follow_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:background="@android:color/transparent"
                android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                android:src="@drawable/ic_grade_black_24dp"/>
            <ImageButton
                android:id="@+id/problems_feed_like_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:background="@android:color/transparent"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/problems_feed_follow_btn"/>
            <ImageButton
                android:id="@+id/problems_feed_share_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:background="@android:color/transparent"
                android:src="@drawable/ic_favorite_black_24dp"
                android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/problems_feed_like_btn"/>
            <ImageButton
                android:id="@+id/problems_feed_answer_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:background="@android:color/transparent"
                android:src="@drawable/ic_question_answer_black_24dp"
                android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>