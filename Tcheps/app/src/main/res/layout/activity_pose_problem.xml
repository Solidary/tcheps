<LinearLayout
    android:id="@+id/pose_problem_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tcheps.activities.PoseProblemActivity"
    android:orientation="vertical"
    android:background="@color/bg_color">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/color_primary"
        android:textColor="@android:color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <EditText android:id="@+id/pose_problem_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/pose_problem_description_hint"
            android:singleLine="false"
            android:gravity="left|start"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textColor="#666"
                android:text="Subject" android:textSize="18sp" android:textAppearance="?android:attr/textAppearanceSmall"/>

            <Spinner
                android:id="@+id/pose_problem_subject_sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/sign_up_teacher_subjects_entries" android:textSize="20sp"
                android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <com.android.ex.chips.RecipientEditTextView
            android:id="@+id/pose_problem_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pose_problem_tags_hint"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textColor="#666"
                android:text="Circle" android:textAppearance="?android:attr/textAppearanceSmall"/>
            <com.android.ex.chips.RecipientEditTextView
                android:id="@+id/pose_problem_circles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pose_problem_tags_hint" />
            <Spinner
                android:id="@+id/sign_up_teacher_place_type_sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/pose_problem_circles_entries" android:textSize="20sp"
                android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
